---
import Layout from '@/layouts/Layout.astro'
import Section from '@/components/Section.astro'
import UserIcon from '@/components/icons/UserIcons.astro'
import Proyectos from '@/components/sections/Proyects.astro'
import Hero from '@/components/sections/Hero.astro'
import About from '@/components/sections/About.astro'
---

<Layout
	title='Flavius Catalin Neacsu - Desarrollador y Programador Web'
	description='Entusiasta de la programcion y el desarrollo web.'
>
	<main class='mx-auto w-full max-w-md p-2 md:max-w-full'>
		<Section classname='mt-8 px-2 md:px-4'>
			<Hero />
		</Section>
		<Section
			id='proyectos'
			classname='mt-16 p-2 md:px-4'
		>
			<Proyectos />
		</Section>
		<Section
			id='sobre-mi'
			classname='mt-20 p-2 md:px-4'
		>
			<h2 class='inline-flex items-center gap-2 text-2xl font-bold'>
				<UserIcon class='size-8' />Sobre m√≠
			</h2>
			<About />
		</Section>
	</main>
</Layout>

---
interface Props {
	link: string
}

const { link } = Astro.props
---

<a
	href={link}
	target='_blank'
	rel='noopener'
	class='mb-2 me-2 inline-flex items-center gap-x-2 rounded-full border border-gray-200 bg-gray-500 px-4 py-2 text-center text-sm font-medium text-gray-950 transition-all hover:scale-110 hover:bg-gray-100 focus:outline-none focus:ring-4 focus:ring-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-600'
>
	<slot />
</a>
